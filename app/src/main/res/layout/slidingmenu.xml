<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_sliding_menu"
    android:orientation="vertical">


    <!--<Button-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="click me"-->
    <!--android:layout_gravity="center_horizontal" />-->

    <com.jeremyfeinstein.slidingmenu.lib.SlidingMenu
        android:id="@+id/slidingmenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/slidingmenu_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gold_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/appbar_padding_top"
                android:drawableLeft="@drawable/bangumi_timeline_weekday_1"
                android:gravity="center"
                android:text="金星"
                android:textSize="@dimen/abc_alert_dialog_button_bar_height" />

            <TextView
                android:id="@+id/fire_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/appbar_padding_top"
                android:drawableLeft="@drawable/bangumi_timeline_weekday_2"
                android:gravity="center"
                android:text="木星"
                android:textSize="@dimen/abc_alert_dialog_button_bar_height" />

            <TextView
                android:id="@+id/water_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/appbar_padding_top"
                android:drawableLeft="@drawable/bangumi_timeline_weekday_3"
                android:gravity="center"
                android:text="水星"
                android:textSize="@dimen/abc_alert_dialog_button_bar_height" />

        </LinearLayout>

    </com.jeremyfeinstein.slidingmenu.lib.SlidingMenu>

</LinearLayout>